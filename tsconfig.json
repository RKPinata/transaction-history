{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@root/*": ["src/*"],
      "@app": ["src/app"],
      "@assets": ["src/assets"],
      "@components": ["src/components"],
      "@constants": ["src/constants"],
      "@hooks": ["src/hooks"],
      "@models": ["src/models"],
      "@services": ["src/services"],
      "@store": ["src/store"],
      "@utils": ["src/utils"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "expo", "src/**/*.test.ts", "src/**/*.test.tsx"]
}
